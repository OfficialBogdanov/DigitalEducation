<Window x:Class="DigitalEducation.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OverlayWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowState="Normal"
        SizeToContent="Manual"
        ShowInTaskbar="False"
        Width="{Binding Source={x:Static SystemParameters.VirtualScreenWidth}}"
        Height="{Binding Source={x:Static SystemParameters.VirtualScreenHeight}}"
        Left="{Binding Source={x:Static SystemParameters.VirtualScreenLeft}}"
        Top="{Binding Source={x:Static SystemParameters.VirtualScreenTop}}">

    <Grid>
        <Canvas x:Name="HintCanvas"
        Panel.ZIndex="9999"
        IsHitTestVisible="False"
        Background="Transparent"/>


        <Rectangle Fill="{StaticResource OverlayBrush}"/>

        <Border x:Name="LessonContainer"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource SurfaceBorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="400"
                MaxHeight="600"
                Padding="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20,20,20,0"
                UseLayoutRounding="True"
                SnapsToDevicePixels="True">

            <Border.Effect>
                <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                  BlurRadius="24" 
                                  ShadowDepth="0"
                                  Opacity="0.15"
                                  Direction="270"/>
            </Border.Effect>

            <Grid UseLayoutRounding="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,16" UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="36" 
                            Height="36" 
                            Background="{StaticResource PrimaryBrush}" 
                            CornerRadius="8"
                            Margin="0,0,12,0">
                        <Image x:Name="LessonIcon"
                               Source="/Assets/Icons/White/Info.png"
                               Width="18" Height="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock x:Name="LessonTitleText"
                               Grid.Column="1"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="2"
                            x:Name="BtnClose"
                            Width="32"
                            Height="32"
                            Click="BtnClose_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" 
                                                Value="{StaticResource HoverBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Image x:Name="CloseIcon" Tag="Close" Width="18" Height="18"/>
                    </Button>
                </Grid>

                <Border x:Name="ContentContainer" Grid.Row="1" UseLayoutRounding="True">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="0"
                                  Margin="0">
                        <StackPanel x:Name="MainContent" UseLayoutRounding="True">
                            <TextBlock x:Name="StepTitle"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"
                                       TextOptions.TextFormattingMode="Display"
                                       TextOptions.TextRenderingMode="ClearType"
                                       UseLayoutRounding="True"/>

                            <TextBlock x:Name="StepDescription"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       LineHeight="20"
                                       Margin="0,0,0,10"
                                       TextOptions.TextFormattingMode="Display"
                                       TextOptions.TextRenderingMode="ClearType"
                                       UseLayoutRounding="True"/>

                            <TextBlock x:Name="StepHint"
                                       FontSize="12"
                                       FontStyle="Italic"
                                       Foreground="{StaticResource InfoBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"
                                       TextOptions.TextFormattingMode="Display"
                                       TextOptions.TextRenderingMode="ClearType"
                                       UseLayoutRounding="True"/>

                            <TextBlock x:Name="StepProgress"
                                       FontSize="12"
                                       Foreground="{StaticResource TextDisabledBrush}"
                                       Margin="0,0,0,20"
                                       TextOptions.TextFormattingMode="Display"
                                       TextOptions.TextRenderingMode="ClearType"
                                       UseLayoutRounding="True"/>

                            <Border x:Name="ProgressBarSection" 
                                    Height="6" 
                                    Background="{StaticResource BackgroundDarkBrush}" 
                                    CornerRadius="3"
                                    Margin="0,0,0,20"
                                    VerticalAlignment="Center"
                                    UseLayoutRounding="True"
                                    SnapsToDevicePixels="True">
                                <Border x:Name="ProgressBarContainer" 
                                        ClipToBounds="True"
                                        CornerRadius="3"
                                        UseLayoutRounding="True"
                                        SnapsToDevicePixels="True">
                                    <Border x:Name="ProgressBarFill" 
                                            Width="0" 
                                            Height="6" 
                                            Background="{StaticResource PrimaryBrush}"
                                            HorizontalAlignment="Left"
                                            UseLayoutRounding="True"
                                            SnapsToDevicePixels="True"/>
                                </Border>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Grid x:Name="NavigationContainer" Grid.Row="2" UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnBack"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Style="{StaticResource NavigationButtonStyle}"
                            Padding="16,10"
                            Margin="0,0,8,0"
                            Click="BtnBack_Click"
                            Visibility="Collapsed"
                            UseLayoutRounding="True">
                        <StackPanel Orientation="Horizontal" UseLayoutRounding="True">
                            <TextBlock Text="Назад" 
                                       VerticalAlignment="Center" 
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnNext"
                            Grid.Column="2"
                            Style="{StaticResource NavigationButtonStyle}"
                            Padding="16,10"
                            Margin="24,0,0,0"
                            Click="BtnNext_Click"
                            UseLayoutRounding="True">
                        <StackPanel Orientation="Horizontal" UseLayoutRounding="True">
                            <TextBlock x:Name="BtnNextText" 
                                       Text="Далее" 
                                       VerticalAlignment="Center" 
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>