<UserControl x:Class="DigitalEducation.Pages.CreateLessonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalEducation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1200"
             Background="Transparent"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource CustomBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="16,12"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedMultiLineTextBox" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Stretch"
                                          Margin="16,12"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddStepBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CustomBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,20">
            <StackPanel UseLayoutRounding="True">

                <Grid Margin="0,0,0,32" UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="4"
                            Height="24"
                            Background="{DynamicResource CustomBrush}"
                            CornerRadius="2"
                            VerticalAlignment="Center"
                            Margin="0,0,12,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Создание урока" 
                                   Style="{DynamicResource TitleTextStyle}"
                                   Foreground="{DynamicResource CustomBrush}"
                                   TextOptions.TextFormattingMode="Display"/>
                        <TextBlock Text="Заполните основную информацию об уроке и добавьте шаги для изучения."
                                   Style="{DynamicResource BodyTextStyle}"/>
                    </StackPanel>
                </Grid>

                <Border Style="{DynamicResource CardStyle}" 
                        Margin="0,0,0,32"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True">
                    <StackPanel UseLayoutRounding="True" Margin="24">

                        <Grid UseLayoutRounding="True" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="48"
                                    Height="48"
                                    Background="{DynamicResource CustomBrush}"
                                    CornerRadius="12"
                                    Margin="0,0,16,0"
                                    UseLayoutRounding="True">
                                <Image Tag="Document"
                                       Width="24"
                                       Height="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Основная информация" 
                                           Style="{DynamicResource SubtitleTextStyle}"
                                           Foreground="{DynamicResource CustomBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                                <TextBlock Text="Введите основную информацию о вашем уроке"
                                           Style="{DynamicResource BodyTextStyle}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Image Tag="Info"
                                       Width="16"
                                       Height="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Название урока *"
                                           Style="{DynamicResource BodyTextStyle}"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBox x:Name="TitleTextBox"
                                     Style="{StaticResource RoundedTextBox}"
                                     Height="52"
                                     MaxLength="200"/>
                            <TextBlock x:Name="TitleErrorText"
                                       Text="Пожалуйста, введите название урока"
                                       Foreground="{DynamicResource ErrorBrush}"
                                       FontSize="14"
                                       Margin="8,4,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Image Tag="Success"
                                       Width="16"
                                       Height="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Сообщение при завершении *"
                                           Style="{DynamicResource BodyTextStyle}"
                                           FontWeight="Medium"/>
                            </StackPanel>
                            <TextBox x:Name="CompletionMessageTextBox"
                                     Style="{StaticResource RoundedMultiLineTextBox}"
                                     Height="140"
                                     MaxLength="500"/>
                            <TextBlock x:Name="CompletionMessageErrorText"
                                       Text="Пожалуйста, введите сообщение о завершении"
                                       Foreground="{DynamicResource ErrorBrush}"
                                       FontSize="14"
                                       Margin="8,4,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <StackPanel x:Name="StepsContainer" 
                            UseLayoutRounding="True">
                </StackPanel>

                <Border x:Name="AddStepBlock"
                        Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="12"
                        Cursor="Hand"
                        Margin="0,0,0,32"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True">
                    <StackPanel UseLayoutRounding="True" Margin="24">

                        <Grid UseLayoutRounding="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="48"
                                    Height="48"
                                    Background="{DynamicResource CustomBrush}"
                                    CornerRadius="12"
                                    Margin="0,0,16,0"
                                    UseLayoutRounding="True">
                                <Image x:Name="AddStepIcon"
                                       Tag="Plus"
                                       Width="24"
                                       Height="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Добавление шага" 
                                           Style="{DynamicResource SubtitleTextStyle}"
                                           Foreground="{DynamicResource CustomBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                                <TextBlock Text="Нажмите здесь, чтобы создать новый шаг для вашего урока"
                                           Style="{DynamicResource BodyTextStyle}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Grid Margin="0,0,0,32" UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="GeneralErrorText"
                               Text=""
                               Foreground="{DynamicResource ErrorBrush}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                    <Button Grid.Column="1"
                            x:Name="CancelButton"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Height="56"
                            Padding="32,0"
                            Margin="0,0,16,0"
                            UseLayoutRounding="True"
                            Click="CancelButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="CancelIcon"
                                   Tag="Close"
                                   Width="20"
                                   Height="20"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Отмена"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2"
                            x:Name="SaveButton"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Height="56"
                            Padding="32,0"
                            UseLayoutRounding="True"
                            Click="SaveButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="SaveIcon"
                                   Tag="Success"
                                   Width="20"
                                   Height="20"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Сохранить урок"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>