<UserControl x:Class="DigitalEducation.CoursesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             UseLayoutRounding="True">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <StackPanel UseLayoutRounding="True">
            <Grid Margin="0,0,0,32" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="4"
                        Height="24"
                        Background="{StaticResource PrimaryBrush}"
                        CornerRadius="2"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Все курсы" 
                               Style="{StaticResource TitleTextStyle}"
                               Foreground="{StaticResource PrimaryDarkBrush}"
                               TextOptions.TextFormattingMode="Display"/>
                    <TextBlock Text="Выберите курс для начала обучения. Все курсы разделены на уроки для удобного изучения."
                               Style="{StaticResource BodyTextStyle}"/>
                </StackPanel>
            </Grid>

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Width="80" 
                            Height="80"
                            CornerRadius="16"
                            Background="{StaticResource PrimaryBrush}"
                            Margin="0,0,24,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Source="/Icons/White/Folder.png"
                               Width="32"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <StackPanel Grid.Column="1" UseLayoutRounding="True">
                        <TextBlock Text="Файлы и папки" 
                                   FontSize="20"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock Text="Научитесь работать с файловой системой компьютера, организовывать документы и эффективно управлять данными."
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Margin="0,0,0,16" UseLayoutRounding="True">
                            <Grid Margin="0,0,0,4" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Прогресс курса" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock x:Name="FilesProgressPercent" Grid.Column="1" Text="100%" Foreground="{StaticResource PrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <Border x:Name="FilesProgressBar" Height="8" CornerRadius="4" Background="{StaticResource BackgroundDarkBrush}" UseLayoutRounding="True">
                                <Grid>
                                    <Border Height="8" CornerRadius="4" Background="{StaticResource PrimaryBrush}" 
                                            HorizontalAlignment="Left" Width="0" UseLayoutRounding="True"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <WrapPanel UseLayoutRounding="True">
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="FilesLessonsCount" Text="4 урока завершено" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="FilesLearningTime" Text="30 минут обучения" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <Button Grid.Column="2" 
                            x:Name="btnFilesCourse"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Height="80"
                            VerticalAlignment="Center"
                            Padding="24,0"
                            Margin="24,0,0,0"
                            Tag="Files"
                            UseLayoutRounding="True"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" UseLayoutRounding="True">
                            <Image x:Name="FilesCourseIcon" 
                                   Tag="Right"
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                                <TextBlock Text="Начать" 
                                           VerticalAlignment="Center" 
                                           Foreground="{DynamicResource TextPrimaryBrush}" 
                                           TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                    
                </Grid>
            </Border>

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Width="80" 
                            Height="80"
                            CornerRadius="16"
                            Background="{StaticResource SuccessBrush}"
                            Margin="0,0,24,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Source="/Icons/White/Monitor.png"
                               Width="32"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <StackPanel Grid.Column="1" UseLayoutRounding="True">
                        <TextBlock Text="Операционная система" 
                                   FontSize="20"
                                   Foreground="{StaticResource SuccessBrush}"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock Text="Освойте основные функции Windows, настройки системы, установку программ и управление рабочим столом."
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Margin="0,0,0,16" UseLayoutRounding="True">
                            <Grid Margin="0,0,0,4" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Прогресс курса" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock x:Name="SystemProgressPercent" Grid.Column="1" Text="80%" Foreground="{StaticResource SuccessBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <Border x:Name="SystemProgressBar" Height="8" CornerRadius="4" Background="{StaticResource BackgroundDarkBrush}" UseLayoutRounding="True">
                                <Grid>
                                    <Border Height="8" CornerRadius="4" Background="{StaticResource SuccessBrush}" 
                                            HorizontalAlignment="Left" Width="0" UseLayoutRounding="True"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <WrapPanel UseLayoutRounding="True">
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="SystemLessonsCount" Text="8 из 10 уроков" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="SystemLearningTime" Text="12 часов обучения" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <Button Grid.Column="2" 
                            x:Name="btnSystemCourse"
                            Style="{DynamicResource NavigationButtonStyle}" 
                            Height="80" 
                            VerticalAlignment="Center" 
                            Padding="24,0" 
                            Margin="24,0,0,0" 
                            Tag="System" 
                            UseLayoutRounding="True"
                            Cursor="Hand">  
                        <StackPanel Orientation="Horizontal" UseLayoutRounding="True">
                            <Image x:Name="SystemCourseIcon" 
                                   Tag="Right"
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Начать" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Width="80" 
                            Height="80"
                            CornerRadius="16"
                            Background="{StaticResource WarningBrush}"
                            Margin="0,0,24,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Source="/Icons/White/Document.png"
                               Width="32"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <StackPanel Grid.Column="1" UseLayoutRounding="True">
                        <TextBlock Text="Офисные программы" 
                                   FontSize="20"
                                   Foreground="{StaticResource WarningBrush}"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock Text="Изучите Microsoft Office: Word для документов, Excel для таблиц, PowerPoint для презентаций и Outlook для почты."
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Margin="0,0,0,16" UseLayoutRounding="True">
                            <Grid Margin="0,0,0,4" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Прогресс курса" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock x:Name="OfficeProgressPercent" Grid.Column="1" Text="0%" Foreground="{StaticResource WarningBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <Border x:Name="OfficeProgressBar" Height="8" CornerRadius="4" Background="{StaticResource BackgroundDarkBrush}" UseLayoutRounding="True">
                                <Grid>
                                    <Border Height="8" CornerRadius="4" Background="{StaticResource WarningBrush}" 
                                            HorizontalAlignment="Left" Width="0" UseLayoutRounding="True"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <WrapPanel UseLayoutRounding="True">
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="OfficeLessonsCount" Text="0 уроков" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="OfficeLearningTime" Text="0 часов обучения" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource NavigationButtonStyle}" Height="80" VerticalAlignment="Center" Padding="24,0" Margin="24,0,0,0" Tag="Office" UseLayoutRounding="True" IsEnabled="False">
                        <StackPanel Orientation="Horizontal" UseLayoutRounding="True">
                            <TextBlock Text="Скоро" VerticalAlignment="Center" Foreground="{StaticResource TextDisabledBrush}" TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardStyle}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Width="80" 
                            Height="80"
                            CornerRadius="16"
                            Background="{StaticResource ErrorBrush}"
                            Margin="0,0,24,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Source="/Icons/White/Globe.png"
                               Width="32"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <StackPanel Grid.Column="1" UseLayoutRounding="True">
                        <TextBlock Text="Интернет" 
                                   FontSize="20"
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock Text="Освойте основы работы в интернете, поиск информации, электронную почту, социальные сети и безопасность в сети."
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Margin="0,0,0,16" UseLayoutRounding="True">
                            <Grid Margin="0,0,0,4" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Прогресс курса" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock x:Name="InternetProgressPercent" Grid.Column="1" Text="0%" Foreground="{StaticResource ErrorBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <Border x:Name="InternetProgressBar" Height="8" CornerRadius="4" Background="{StaticResource BackgroundDarkBrush}" UseLayoutRounding="True">
                                <Grid>
                                    <Border Height="8" CornerRadius="4" Background="{StaticResource ErrorBrush}" 
                                            HorizontalAlignment="Left" Width="0" UseLayoutRounding="True"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <WrapPanel UseLayoutRounding="True">
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="InternetLessonsCount" Text="0 уроков" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                            <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,8" UseLayoutRounding="True">
                                <TextBlock x:Name="InternetLearningTime" Text="0 часов обучения" Foreground="{StaticResource TextPrimaryBrush}" TextOptions.TextFormattingMode="Display"/>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource NavigationButtonStyle}" Height="80" VerticalAlignment="Center" Padding="24,0" Margin="24,0,0,0" Tag="Internet" UseLayoutRounding="True" IsEnabled="False">
                        <StackPanel Orientation="Horizontal" UseLayoutRounding="True">
                            <TextBlock Text="Скоро" VerticalAlignment="Center" Foreground="{StaticResource TextDisabledBrush}" TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>