<UserControl x:Class="DigitalEducation.CustomLessonsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             UseLayoutRounding="True">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,20">
        <StackPanel UseLayoutRounding="True">
            <Border Style="{DynamicResource CardStyle}"
                    Margin="0,0,0,32"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Width="80"
                            Height="80"
                            Background="{DynamicResource CustomBrush}"
                            CornerRadius="16"
                            Margin="0,0,20,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Source="/Icons/White/Book.png"
                               Width="32"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <StackPanel Grid.Column="1" UseLayoutRounding="True">
                        <TextBlock Text="Мои уроки"
                                   FontSize="20"
                                   Foreground="{DynamicResource CustomBrush}"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>

                        <TextBlock Text="Создавайте и редактируйте собственные уроки. Добавляйте шаги с инструкциями и проверкой действий пользователя."
                                   Style="{DynamicResource BodyTextStyle}"
                                   Margin="0,0,0,12"/>
                    </StackPanel>

                    <Button Grid.Column="2"
                            x:Name="CreateLessonButton"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Height="80"
                            VerticalAlignment="Center"
                            Padding="24,0"
                            Margin="24,0,0,0"
                            UseLayoutRounding="True"
                            Cursor="Hand"
                            Click="CreateLessonButton_Click">
                        <StackPanel Orientation="Horizontal" 
                                    UseLayoutRounding="True"
                                    HorizontalAlignment="Center" Cursor="">
                            <Image x:Name="CustomCourseIcon" 
                                   Tag="Document"
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Создать" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Grid Margin="0,0,0,24" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Доступные уроки" 
                           Style="{DynamicResource SubtitleTextStyle}"
                           Grid.Column="0"
                           TextOptions.TextFormattingMode="Display"/>
            </Grid>

            <TextBlock Text="Здесь отображаются все созданные вами уроки. Нажмите 'Редактировать' для изменения урока."
                       Style="{DynamicResource BodyTextStyle}"
                       Margin="0,0,0,24"/>

            <StackPanel x:Name="LessonsContainer" 
                        UseLayoutRounding="True">
            </StackPanel>

            <Border x:Name="EmptyStateBorder"
                    Style="{DynamicResource CardStyle}"
                    Visibility="Collapsed"
                    Margin="0,32,0,0"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            UseLayoutRounding="True">
                    <Border Width="80"
                            Height="80"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="16"
                            Margin="0,0,0,20"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image x:Name="EmptyStateIcon"
                               Tag="Info"
                               Width="24"
                               Height="24"/>
                    </Border>
                    <TextBlock Text="Пока нет созданных уроков"
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"
                               TextOptions.TextFormattingMode="Display"/>
                    <TextBlock Text="Нажмите кнопку 'Создать' выше, чтобы добавить ваш первый урок."
                               Style="{DynamicResource BodyTextStyle}"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               MaxWidth="300"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>