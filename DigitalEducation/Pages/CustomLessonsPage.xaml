<UserControl x:Class="DigitalEducation.CustomLessonsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             UseLayoutRounding="True">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,20">
        <StackPanel UseLayoutRounding="True">
            <Border Style="{DynamicResource CardStyle}"
                    Margin="0,0,0,32"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Width="80"
                            Height="80"
                            Background="{DynamicResource CustomBrush}"
                            CornerRadius="16"
                            Margin="0,0,20,0"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Source="/Icons/White/Book.png"
                               Width="32"
                               Height="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <StackPanel Grid.Column="1" UseLayoutRounding="True">
                        <TextBlock Text="Мои уроки"
                                   FontSize="20"
                                   Foreground="{DynamicResource CustomBrush}"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>

                        <TextBlock Text="Создавайте и редактируйте собственные уроки. Добавляйте шаги с инструкциями и проверкой действий пользователя."
                                   Style="{DynamicResource BodyTextStyle}"
                                   Margin="0,0,0,12"/>
                    </StackPanel>

                    <Button Grid.Column="2"
                            x:Name="CreateLessonButton"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Height="80"
                            VerticalAlignment="Center"
                            Padding="24,0"
                            Margin="24,0,0,0"
                            UseLayoutRounding="True"
                            Cursor="Hand"
                            Click="CreateLessonButton_Click">
                        <StackPanel Orientation="Horizontal" 
                                    UseLayoutRounding="True"
                                    HorizontalAlignment="Center" Cursor="">
                            <Image x:Name="CustomCourseIcon" 
                                   Tag="Document"
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Создать" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Border Style="{DynamicResource CardStyle}"
                    Margin="0,0,0,24"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True"
                    Padding="24">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="{DynamicResource BackgroundDarkBrush}"
                            CornerRadius="8"
                            Padding="16,0"
                            VerticalAlignment="Center"
                            BorderBrush="Transparent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Tag="Search"
                                   Width="20"
                                   Height="20"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <TextBox x:Name="SearchTextBox"
                                     Grid.Column="1"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Padding="0,12"
                                     TextChanged="SearchTextBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  VerticalAlignment="Center"
                                                                  Background="Transparent"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>

                            <Button x:Name="ClearSearchButton"
                                    Grid.Column="2"
                                    Style="{StaticResource NavigationButtonStyle}"
                                    Width="32"
                                    Height="32"
                                    VerticalAlignment="Center"
                                    Padding="0"
                                    Visibility="Collapsed"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="ClearSearchButton_Click">
                                <Image Tag="Close"
                                       Width="16"
                                       Height="16"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Button>
                        </Grid>
                    </Border>

                    <ComboBox x:Name="SortComboBox"
                              Grid.Column="1"
                              Width="240"
                              Height="48"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Margin="24,0,0,0"
                              Padding="16,0"
                              Background="{DynamicResource BackgroundDarkBrush}"
                              BorderBrush="Transparent"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              FontSize="14"
                              SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" UseLayoutRounding="True" VerticalAlignment="Center">
                                    <Image Tag="List"
                                           Width="20"
                                           Height="20"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding}"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectedBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <Border x:Name="mainBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="0"
                                                        CornerRadius="8"
                                                        SnapsToDevicePixels="True"
                                                        Cursor="Hand">
                                                    <Grid>
                                                        <ContentPresenter x:Name="contentPresenter"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Center"
                                                                          Margin="{TemplateBinding Padding}"
                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                          IsHitTestVisible="False"/>

                                                        <ToggleButton x:Name="toggleButton"
                                                                      Focusable="False"
                                                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                                      ClickMode="Press"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent"
                                                                      Opacity="0"
                                                                      Cursor="Hand">
                                                            <ToggleButton.Template>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                                        <Rectangle Fill="Transparent"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </ToggleButton.Template>
                                                        </ToggleButton>
                                                    </Grid>
                                                </Border>

                                                <TextBox x:Name="PART_EditableTextBox" Visibility="Collapsed"/>

                                                <Popup x:Name="PART_Popup"
                                                       AllowsTransparency="True"
                                                       Placement="Bottom"
                                                       IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                       PopupAnimation="Fade"
                                                       Focusable="False">
                                                    <Border x:Name="dropDownBorder"
                                                            Background="{DynamicResource BackgroundDarkBrush}"
                                                            BorderBrush="{DynamicResource SurfaceBorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="8"
                                                            MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                            MinWidth="{TemplateBinding ActualWidth}"
                                                            Padding="4">
                                                        <ScrollViewer x:Name="DropDownScrollViewer">
                                                            <ItemsPresenter x:Name="ItemsPresenter"
                                                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="mainBorder" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsDropDownOpen" Value="True">
                                                    <Setter TargetName="mainBorder" Property="Background" Value="{DynamicResource SelectedBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </Grid>
            </Border>

            <Grid Margin="0,0,0,24" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Доступные уроки" 
                           Style="{DynamicResource SubtitleTextStyle}"
                           Grid.Column="0"
                           TextOptions.TextFormattingMode="Display"/>

                <TextBlock x:Name="SearchResultsText"
                           Grid.Column="2"
                           Style="{DynamicResource BodyTextStyle}"
                           HorizontalAlignment="Right"
                           Visibility="Collapsed"
                           TextOptions.TextFormattingMode="Display"/>
            </Grid>

            <TextBlock Text="Здесь отображаются все созданные вами уроки. Нажмите 'Редактировать' для изменения урока."
                       Style="{DynamicResource BodyTextStyle}"
                       Margin="0,0,0,24"/>

            <StackPanel x:Name="LessonsContainer" 
                        UseLayoutRounding="True">
            </StackPanel>

            <Border x:Name="EmptyStateBorder"
                    Style="{DynamicResource CardStyle}"
                    Visibility="Collapsed"
                    Margin="0,32,0,0"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            UseLayoutRounding="True">
                    <Border Width="80"
                            Height="80"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="16"
                            Margin="0,0,0,20"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image x:Name="EmptyStateIcon"
                               Tag="Info"
                               Width="24"
                               Height="24"/>
                    </Border>
                    <TextBlock Text="Пока нет созданных уроков"
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"
                               TextOptions.TextFormattingMode="Display"/>
                    <TextBlock Text="Нажмите кнопку 'Создать' выше, чтобы добавить ваш первый урок."
                               Style="{DynamicResource BodyTextStyle}"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               MaxWidth="300"/>
                </StackPanel>
            </Border>

            <Border x:Name="NoSearchResultsBorder"
                    Style="{DynamicResource CardStyle}"
                    Visibility="Collapsed"
                    Margin="0,32,0,0"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            UseLayoutRounding="True">
                    <Border Width="80"
                            Height="80"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="16"
                            Margin="0,0,0,20"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Image Tag="Search"
                               Width="24"
                               Height="24"/>
                    </Border>
                    <TextBlock Text="Ничего не найдено"
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"
                               TextOptions.TextFormattingMode="Display"/>
                    <TextBlock Text="Попробуйте изменить поисковый запрос или проверьте правильность ввода."
                               Style="{DynamicResource BodyTextStyle}"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               MaxWidth="300"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>