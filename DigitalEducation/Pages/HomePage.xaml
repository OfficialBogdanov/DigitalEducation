<UserControl x:Class="DigitalEducation.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             UseLayoutRounding="True">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <Grid UseLayoutRounding="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,32" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="4"
                        Height="24"
                        Background="{StaticResource PrimaryBrush}"
                        CornerRadius="2"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Добро пожаловать в DigitalEducation!" 
                               Style="{StaticResource TitleTextStyle}"
                               Foreground="{StaticResource PrimaryDarkBrush}"
                               TextOptions.TextFormattingMode="Display"/>

                    <TextBlock Text="Мы поможем вам освоить цифровую грамотность шаг за шагом. Начните свой путь к уверенному использованию компьютера и интернета уже сегодня!"
                               Style="{StaticResource BodyTextStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,32" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Style="{StaticResource CardStyle}"
                        Margin="0,0,16,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True">
                    <StackPanel>
                        <TextBlock x:Name="TotalCoursesValue" 
                                   Text="12" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock x:Name="TotalCoursesLabel" 
                                   Text="завершённых курсов" 
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" 
                        Style="{StaticResource CardStyle}"
                        Margin="8,0,8,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True">
                    <StackPanel>
                        <TextBlock x:Name="LearningHoursValue" 
                                   Text="45" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock x:Name="LearningHoursLabel" 
                                   Text="часов обучения" 
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" 
                        Style="{StaticResource CardStyle}"
                        Margin="8,0,8,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True">
                    <StackPanel>
                        <TextBlock x:Name="LessonsCompletedValue" 
                                   Text="24" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource WarningBrush}"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock x:Name="LessonsCompletedLabel" 
                                   Text="уроков пройдено" 
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" 
                        Style="{StaticResource CardStyle}"
                        Margin="16,0,0,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True">
                    <StackPanel>
                        <TextBlock x:Name="StreakDaysValue" 
                                   Text="7" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource ErrorBrush}"
                                   TextOptions.TextFormattingMode="Display"
                                   TextOptions.TextRenderingMode="ClearType"/>
                        <TextBlock x:Name="StreakDaysLabel" 
                                   Text="дней подряд" 
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" UseLayoutRounding="True">
                <TextBlock Text="Курсы обучения" 
                           Style="{StaticResource SubtitleTextStyle}"
                           TextOptions.TextFormattingMode="Display"/>

                <TextBlock Text="Выберите интересующий вас курс для начала обучения"
                           Style="{StaticResource BodyTextStyle}"
                           Margin="0,0,0,24"/>

                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" 
                            Style="{StaticResource CategoryCardStyle}"
                            Margin="0,0,16,16"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Button x:Name="btnFiles" 
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Tag="Files"
                                Cursor="Hand" 
                                Click="btnFiles_Click"
                                UseLayoutRounding="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border x:Name="border"
                                                Background="{StaticResource SurfaceBrush}"
                                                BorderBrush="{StaticResource SurfaceBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                UseLayoutRounding="True"
                                                SnapsToDevicePixels="True">
                                            <Border.Effect>
                                                <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                                                  BlurRadius="16" 
                                                                  ShadowDepth="0"
                                                                  Opacity="0.08"
                                                                  Direction="270"/>
                                            </Border.Effect>
                                            <StackPanel Margin="24">
                                                <Border Width="64" 
                                                        Height="64"
                                                        CornerRadius="12"
                                                        Background="{StaticResource PrimaryBrush}"
                                                        Margin="0,0,0,16"
                                                        UseLayoutRounding="True"
                                                        SnapsToDevicePixels="True">
                                                    <Image Source="/Icons/Folder.png"
                                                           Width="32"
                                                           Height="32"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock x:Name="titleText" 
                                                           Text="Файлы и папки" 
                                                           FontSize="16"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           FontWeight="Medium"
                                                           Margin="0,0,0,8"
                                                           TextOptions.TextFormattingMode="Display"
                                                           TextOptions.TextRenderingMode="ClearType"
                                                           UseLayoutRounding="True"/>
                                                <TextBlock x:Name="descriptionText" 
                                                           Text="Научитесь работать с файловой системой, организовывать документы и эффективно управлять данными"
                                                           Style="{StaticResource BodyTextStyle}"
                                                           UseLayoutRounding="True"/>
                                            </StackPanel>
                                        </Border>
                                        <Border x:Name="scaleContainer"
                                                Background="Transparent"
                                                CornerRadius="12"
                                                UseLayoutRounding="True"
                                                SnapsToDevicePixels="True"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter TargetName="titleText" Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
                                            <Setter TargetName="descriptionText" Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleX"
                                                                         To="1.03"
                                                                         Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleY"
                                                                         To="1.03"
                                                                         Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleX"
                                                                         To="1"
                                                                         Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleY"
                                                                         To="1"
                                                                         Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" 
                            Style="{StaticResource CategoryCardStyle}"
                            Margin="16,0,0,16"
                            UseLayoutRounding="True"
                            SnapsToDevicePixels="True">
                        <Button x:Name="btnSystem" 
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Tag="System"
                                Cursor="Hand"
                                UseLayoutRounding="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border x:Name="border"
                                                Background="{StaticResource SurfaceBrush}"
                                                BorderBrush="{StaticResource SurfaceBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                UseLayoutRounding="True"
                                                SnapsToDevicePixels="True">
                                            <Border.Effect>
                                                <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                                                  BlurRadius="16" 
                                                                  ShadowDepth="0"
                                                                  Opacity="0.08"
                                                                  Direction="270"/>
                                            </Border.Effect>
                                            <StackPanel Margin="24">
                                                <Border Width="64" 
                                                        Height="64"
                                                        CornerRadius="12"
                                                        Background="{StaticResource SuccessBrush}"
                                                        Margin="0,0,0,16"
                                                        UseLayoutRounding="True"
                                                        SnapsToDevicePixels="True">
                                                    <Image Source="/Icons/Monitor.png"
                                                           Width="32"
                                                           Height="32"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock x:Name="titleText" 
                                                           Text="Операционная система" 
                                                           FontSize="16"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           FontWeight="Medium"
                                                           Margin="0,0,0,8"
                                                           TextOptions.TextFormattingMode="Display"
                                                           TextOptions.TextRenderingMode="ClearType"
                                                           UseLayoutRounding="True"/>
                                                <TextBlock x:Name="descriptionText" 
                                                           Text="Освойте основные функции Windows, настройки системы и работу с программами"
                                                           Style="{StaticResource BodyTextStyle}"
                                                           UseLayoutRounding="True"/>
                                            </StackPanel>
                                        </Border>
                                        <Border x:Name="scaleContainer"
                                                Background="Transparent"
                                                CornerRadius="12"
                                                UseLayoutRounding="True"
                                                SnapsToDevicePixels="True"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource SuccessBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                                            <Setter TargetName="titleText" Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
                                            <Setter TargetName="descriptionText" Property="Foreground" Value="{StaticResource TextInverseBrush}"/>
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleX"
                                                                         To="1.03"
                                                                         Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleY"
                                                                         To="1.03"
                                                                         Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleX"
                                                                         To="1"
                                                                         Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                                         Storyboard.TargetProperty="ScaleY"
                                                                         To="1"
                                                                         Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Border>
                </Grid>
            </StackPanel>

            <Border Grid.Row="3" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,32,0,0"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                <StackPanel>
                    <TextBlock Text="Ваш прогресс обучения" 
                               Style="{StaticResource SectionTitleStyle}"
                               TextOptions.TextFormattingMode="Display"/>

                    <Grid Margin="0,16,0,0" UseLayoutRounding="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Height="12" 
                                CornerRadius="6"
                                Background="{StaticResource BackgroundDarkBrush}"
                                Margin="0,0,0,8"
                                UseLayoutRounding="True">
                            <Grid>
                                <Border x:Name="OverallProgressBar" 
                                        Height="12" 
                                        CornerRadius="6"
                                        Background="{StaticResource PrimaryGradient}"
                                        HorizontalAlignment="Left"
                                        UseLayoutRounding="True"/>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="1" UseLayoutRounding="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Общий прогресс" 
                                       Style="{StaticResource BodyTextStyle}"/>

                            <TextBlock x:Name="OverallProgressText" Grid.Column="1" 
                                       Text="65% завершено"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       TextOptions.TextFormattingMode="Display"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Margin="0,16,0,0">
                            <Grid Margin="0,0,0,8" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Файлы и папки" 
                                           Style="{StaticResource BodyTextStyle}"/>

                                <TextBlock x:Name="FilesProgressText" Grid.Column="1" 
                                           Text="100%"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                            </Grid>

                            <Grid Margin="0,0,0,8" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Операционная система" 
                                           Style="{StaticResource BodyTextStyle}"/>

                                <TextBlock x:Name="SystemProgressText" Grid.Column="1" 
                                           Text="80%"
                                           Foreground="{StaticResource SuccessBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                            </Grid>

                            <Grid Margin="0,0,0,8" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Офисные программы" 
                                           Style="{StaticResource BodyTextStyle}"/>

                                <TextBlock x:Name="OfficeProgressText" Grid.Column="1" 
                                           Text="45%"
                                           Foreground="{StaticResource WarningBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                            </Grid>

                            <Grid UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Интернет" 
                                           Style="{StaticResource BodyTextStyle}"/>

                                <TextBlock x:Name="InternetProgressText" Grid.Column="1" 
                                           Text="15%"
                                           Foreground="{StaticResource ErrorBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>