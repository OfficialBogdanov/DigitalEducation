<UserControl x:Class="DigitalEducation.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             UseLayoutRounding="True">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <StackPanel UseLayoutRounding="True">
            <Grid Margin="0,0,0,32" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="4"
                        Height="24"
                        Background="{DynamicResource PrimaryBrush}"
                        CornerRadius="2"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0"
                        UseLayoutRounding="True"
                        SnapsToDevicePixels="True"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Настройки" 
                               Style="{DynamicResource TitleTextStyle}"
                               Foreground="{DynamicResource PrimaryDarkBrush}"
                               TextOptions.TextFormattingMode="Display"/>
                    <TextBlock Text="Настройте приложение под свои предпочтения. Здесь вы можете управлять своими данными и прогрессом."
                               Style="{DynamicResource BodyTextStyle}"/>
                </StackPanel>
            </Grid>

            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,24" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1" UseLayoutRounding="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" UseLayoutRounding="True">
                            <TextBlock Text="Общие настройки" 
                                       Style="{DynamicResource SubtitleTextStyle}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Настройте внешний вид по своему вкусу"
                                       Style="{DynamicResource BodyTextStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,24,0,0" UseLayoutRounding="True">
                            <Grid Margin="0,0,0,12" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="28"
                                        Height="28"
                                        Background="Transparent"
                                        CornerRadius="6"
                                        Margin="6,10,6,0"
                                        VerticalAlignment="Top">
                                    <Image x:Name="ThemeSectionIcon"
                                           Tag="Moon"
                                           Width="18"
                                           Height="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" UseLayoutRounding="True">
                                    <TextBlock Text="Тема" 
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Измените цветовую палитру вашего приложения."
                                               Style="{DynamicResource BodyTextStyle}"
                                               Margin="0,0,0,16"/>

                                    <Border CornerRadius="8"
                                            Padding="4"
                                            HorizontalAlignment="Left">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button x:Name="btnLightTheme"
                                                    Grid.Column="0"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="20,12"
                                                    Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <Image x:Name="LightThemeIcon"
                                                           Tag="Sun"
                                                           Width="18"
                                                           Height="18"
                                                           Margin="0,0,8,0"
                                                           VerticalAlignment="Center"/>
                                                    <TextBlock Text="Светлая"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                </StackPanel>
                                            </Button>

                                            <Button x:Name="btnDarkTheme"
                                                    Grid.Column="1"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="20,12"
                                                    Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <Image x:Name="DarkThemeIcon"
                                                           Tag="Moon"
                                                           Width="18"
                                                           Height="18"
                                                           Margin="0,0,8,0"
                                                           VerticalAlignment="Center"/>
                                                    <TextBlock Text="Тёмная"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <Separator Background="{DynamicResource SurfaceBorderBrush}" 
                                       Margin="0,0,0,20"/>

                            <Grid UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="28"
                                        Height="28"
                                        Background="Transparent"
                                        CornerRadius="6"
                                        Margin="6,10,6,0"
                                        VerticalAlignment="Top">
                                    <Image x:Name="LanguageSectionIcon"
                                           Tag="Globe"
                                           Width="18"
                                           Height="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" UseLayoutRounding="True">
                                    <TextBlock Text="Язык" 
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Выберите предпочетаемый язык интерфейса приложения."
                                               Style="{DynamicResource BodyTextStyle}"
                                               Margin="0,0,0,16"/>
                                    <Border CornerRadius="8"
                                            Padding="4"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button x:Name="btnRussian"
                                                    Grid.Column="0"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="20,12"
                                                    Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <Image x:Name="RussianIcon"
                                                           Tag="Globe"
                                                           Width="18"
                                                           Height="18"
                                                           Margin="0,0,8,0"
                                                           VerticalAlignment="Center"/>
                                                    <TextBlock Text="Русский"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                </StackPanel>
                                            </Button>

                                            <Button x:Name="btnEnglish"
                                                    Grid.Column="1"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="20,12"
                                                    Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <Image x:Name="EnglishIcon"
                                                           Tag="Globe"
                                                           Width="18"
                                                           Height="18"
                                                           Margin="0,0,8,0"
                                                           VerticalAlignment="Center"/>
                                                    <TextBlock Text="English"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <Separator Background="{DynamicResource SurfaceBorderBrush}" 
                                       Margin="0,0,0,20"/>

                            <Grid Margin="0,0,0,12" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="28"
                                        Height="28"
                                        Background="Transparent"
                                        CornerRadius="6"
                                        Margin="6,10,6,0"
                                        VerticalAlignment="Top">
                                    <Image x:Name="ScaleSectionIcon"
                                           Tag="ZoomIn"
                                           Width="18"
                                           Height="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" UseLayoutRounding="True">
                                    <TextBlock Text="Масштаб" 
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="Настройте размер всех элементов интерфейса для комфортного просмотра."
                                               Style="{DynamicResource BodyTextStyle}"
                                               Margin="0,0,0,16"/>

                                    <Border CornerRadius="8"
                                            Padding="4"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button x:Name="btnSmallScale"
                                                    Grid.Column="0"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="16,12"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="Маленький 75%"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </Button>

                                            <Button x:Name="btnMediumScale"
                                                    Grid.Column="1"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="16,12"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="Средний 100%"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </Button>

                                            <Button x:Name="btnLargeScale"
                                                    Grid.Column="2"
                                                    Style="{DynamicResource NavigationButtonStyle}"
                                                    Cursor="Hand"
                                                    Padding="16,12"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="Большой 125%"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,24" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1" UseLayoutRounding="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" UseLayoutRounding="True">
                            <TextBlock Text="Управление данными" 
                           Style="{DynamicResource SubtitleTextStyle}"
                           Margin="0,0,0,4"/>
                            <TextBlock Text="Управляйте вашими данными и настройками приложения. Вы можете очистить прогресс обучения или сбросить настройки."
                           Style="{DynamicResource BodyTextStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,24,0,0" UseLayoutRounding="True">
                            <Grid Margin="0,0,0,12" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                            Width="28"
                            Height="28"
                            Background="Transparent"
                            CornerRadius="6"
                            Margin="6,10,6,0"
                            VerticalAlignment="Top">
                                    <Image x:Name="TrashIcon"
                               Tag="Trash"
                               Width="18"
                               Height="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" UseLayoutRounding="True">
                                    <TextBlock Text="Прогресс обучения" 
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,4"/>
                                    <TextBlock Text="Здесь вы можете очистить весь ваш прогресс обучения, включая завершенные уроки, статистику и прогресс по курсам. Это действие нельзя отменить."
                                   Style="{DynamicResource BodyTextStyle}"
                                   Margin="0,0,0,16"/>

                                    <Button x:Name="btnClearProgress"
                                Style="{DynamicResource NavigationButtonStyle}"
                                Background="{DynamicResource ErrorBrush}"
                                HorizontalAlignment="Left"
                                Padding="24,16"
                                Cursor="Hand"
                                Margin="0,8,0,0">
                                        <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                            <Image x:Name="ClearProgressIcon"
                                       Tag="Trash"
                                       Width="18"
                                       Height="18"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Очистить прогресс"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <Separator Background="{DynamicResource SurfaceBorderBrush}" 
                           Margin="0,0,0,20"/>

                            <Grid UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                            Width="28"
                            Height="28"
                            Background="Transparent"
                            CornerRadius="6"
                            Margin="6,10,6,0"
                            VerticalAlignment="Top">
                                    <Image x:Name="RefreshIcon"
                               Tag="Refresh"
                               Width="18"
                               Height="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" UseLayoutRounding="True">
                                    <TextBlock Text="Сброс приложения" 
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,4"/>
                                    <TextBlock Text="Сбросить все настройки приложения к значениям по умолчанию. Это не затронет ваш прогресс обучения."
                                   Style="{DynamicResource BodyTextStyle}"
                                   Margin="0,0,0,16"/>

                                    <Button x:Name="btnResetSettings"
                                Style="{DynamicResource NavigationButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="24,16"
                                Cursor="Hand">
                                        <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                            <Image x:Name="ResetSettingsIcon"
                                       Tag="Refresh"
                                       Width="18"
                                       Height="18"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Сбросить настройки"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Style="{DynamicResource CardStyle}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Grid UseLayoutRounding="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1" UseLayoutRounding="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" UseLayoutRounding="True">
                            <TextBlock Text="Информация о приложении" 
                                       Style="{DynamicResource SubtitleTextStyle}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Основная информация о приложении, версии и расположении данных."
                                       Style="{DynamicResource BodyTextStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,24,0,0">
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="28"
                                            Height="28"
                                            Background="Transparent"
                                            CornerRadius="6"
                                            Margin="0,0,12,0">
                                        <Image x:Name="InfoIcon"
                                               Tag="Info"
                                               Width="18"
                                               Height="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Версия" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="15"
                                               Width="100"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" 
                                           Text="1.0.0 Beta"  
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="28"
                                            Height="28"
                                            Background="Transparent"
                                            CornerRadius="6"
                                            Margin="0,0,12,0">
                                        <Image x:Name="UserIcon"
                                               Tag="User"
                                               Width="18"
                                               Height="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Разработчик" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="15"
                                               Width="100"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" 
                                           Text="Богданов Данил и Туктаров Артем" 
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <Border Width="28"
                                            Height="28"
                                            Background="Transparent"
                                            CornerRadius="6"
                                            Margin="0,0,12,0">
                                        <Image x:Name="FolderIcon"
                                               Tag="Folder"
                                               Width="18"
                                               Height="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Данные" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="15"
                                               Width="100"/>
                                </StackPanel>
                                <TextBlock x:Name="txtProgressPath"
                                           Grid.Column="1" 
                                           FontSize="15"
                                           FontWeight="Medium"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>