<UserControl x:Class="DigitalEducation.MasterLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="MasterLayoutControl"
             Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource SurfaceBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="40,0">
            <Grid Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="36" 
                            Height="36" 
                            CornerRadius="8"
                            Background="{DynamicResource PrimaryGradient}"
                            Margin="0,0,12,0">
                       <Image Width="20" 
                              Height="20"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Source="/Assets/Icons/White/Book.png"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="DigitalEducation" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryDarkBrush}"/>
                        <TextBlock Text="Ваш помощник в цифровой грамотности"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button x:Name="btnHome" 
                            Style="{DynamicResource NavigationButtonStyle}"
                            Margin="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="HomeIcon" 
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="btnHomeText"
                                       Text="Главная" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnCourses" 
                            Style="{DynamicResource NavigationButtonStyle}"
                            Margin="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="ListIcon" 
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="btnCoursesText"
                                       Text="Курсы" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnSettings" 
                            Style="{DynamicResource NavigationButtonStyle}"
                            Margin="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="SettingsIcon" 
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="btnSettingsText"
                                       Text="Настройки" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button x:Name="btnCloseApp" 
                            Style="{DynamicResource NavigationButtonStyle}"
                            Margin="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="CloseIcon" 
                                   Width="24" 
                                   Height="24" 
                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="btnCloseAppText"
                                       Text="Выход" 
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ContentPresenter x:Name="ContentArea" 
                          Grid.Row="1"
                          Content="{Binding Content, ElementName=MasterLayoutControl}"/>

        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource SurfaceBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="40,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="FooterText"
                           Text="© 2025 DigitalEducation"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="VersionText"
                               Text="Версия 1.0.0" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,24,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>